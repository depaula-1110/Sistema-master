@model IEnumerable<Sistema.Models.Marcas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p style="text-align: right">
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nmMarca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nmMarca)
            </td>
            <td style="text-align: right; width: 200px">
                <a asp-action="Edit" asp-route-id="@item.idMarca">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idMarca">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.idMarca">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
