@model IEnumerable<Sistema.Models.Paises>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nmPais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DDI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sigla)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nmPais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DDI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sigla)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idPais">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idPais">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.idPais">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
