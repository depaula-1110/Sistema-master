@model IEnumerable<Sistema.Models.Cidades>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nmCidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DDD)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nmCidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DDD)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idCidade">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idCidade">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.idCidade">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
