@model IEnumerable<Sistema.Models.Compras>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p style="text-align: right">
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nrModelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nrSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nrNota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idFornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dtEmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dtCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dtEntrega)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nrModelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nrSerie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nrNota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nmFornecedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtEmissao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dtEntrega)
                </td>
                <td style="text-align: right; width: 200px">
                    <a asp-action="Edit" asp-route-id="@item">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item">Visualizar</a> |
                    <a asp-action="Delete" asp-route-id="@item">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
