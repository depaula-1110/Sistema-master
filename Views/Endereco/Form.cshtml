@model Sistema.Models.Enderecos

@{
    var disabled = Convert.ToBoolean(ViewBag.disabledForm);
    var pageType = Convert.ToString(ViewBag.pageType);
}

<div class="col-md-3">
    @Html.LabelFor(e => e.nrCEP, new { @class = "form-label" })
    @(disabled ?
        @Html.TextBoxFor(model => model.nrCEP, new { @class = "form-control", autofocus = "autofocus", @disabled = "disabled" }) :
        @Html.TextBoxFor(model => model.nrCEP, new { @class = "form-control number", maxlength = "150", @placeholder = "" })
        )
    @Html.ValidationMessageFor(model => model.nrCEP, null, new { @class = "help-block" })
</div>
